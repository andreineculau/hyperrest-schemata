{
    "$schema": "core.json#",
    "id": "http://schema.hyperrest.com/draft-00/operation-header.json#",
    "allOf": [{
        "$ref": "core.json#"
    }],

    "title": "HyperREST operation header schema",

    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "description": "HTTP header name",
            "type": "string"
        },

        "value": {
            "title": "Value",
            "description": "HTTP header value",
            "type": "string"
        },

        "required": {
            "title": "Required",
            "description": "HTTP header is required",
            "type": "boolean",
            "default": false
        }
    },
    "required": [
        "name"
    ]
}
